<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prop="clr-namespace:IndependBusines.Resources.Localize"
             x:Class="IndependBusines.CommonView.FooterMenu">
    <ContentView.Resources>
        <Style TargetType="Button" x:Key="FooterMenu">
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="TextColor" Value="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
        </Style>
        <Style TargetType="StackLayout" x:Key="FooterLayout">
            <Setter Property="Orientation" Value="Horizontal"/>
        </Style>
        <Style TargetType="Border" x:Key="BorderStyle">
            <Setter Property="BackgroundColor" Value="Gray" />
            <Setter Property="Margin" Value="20"/>
            <Setter Property="StrokeShape">
                <Setter.Value>
                    <RoundRectangleGeometry CornerRadius="16"/>
                </Setter.Value>
            </Setter>
        </Style>
    </ContentView.Resources>
    
    <Border Style="{StaticResource BorderStyle}">
        <StackLayout Style="{StaticResource FooterLayout}">
            <Button Text="{prop:Translate menu_home}" HorizontalOptions="FillAndExpand"  Style="{StaticResource FooterMenu}" ImageSource="{AppThemeBinding Light='home_black.png', Dark='home_white.png'}" ContentLayout="Top,2" />
            <Button Text="{prop:Translate menu_record}" HorizontalOptions="FillAndExpand" Style="{StaticResource FooterMenu}" ImageSource="{AppThemeBinding Light='work_black.png', Dark='work_white.png'}" ContentLayout="Top,2" />
        </StackLayout>
    </Border>
</ContentView>